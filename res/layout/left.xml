<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f5e8"
    android:orientation="vertical" >

<LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="140dip"

        android:orientation="horizontal" >
        
         <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal" 
            android:layout_weight="1">
            
             <ImageView
                 android:id="@+id/imageView_1"
                 style="@style/book_cover_img"
                 android:background="@drawable/menu_microbloghome"
                 android:clickable="true"
                 android:focusable="true" />
            
            <TextView
                android:id="@+id/TextView1"
                style="@style/book_cover_txt"
                android:text="微博" />
            
         </FrameLayout>
         
         <FrameLayout
            android:id="@+id/FrameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
             <ImageView
                android:id="@+id/imageView_2"
                style="@style/book_cover_img"
                android:background="@drawable/menu_myselfhome"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/TextView2"
                style="@style/book_cover_txt"
                android:text="我的主页" />
            
          </FrameLayout>
          
         <FrameLayout
            android:id="@+id/FrameLayout3"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
             <ImageView
                android:id="@+id/imageView_3"
                style="@style/book_cover_img"
                android:background="@drawable/menu_chat"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/TextView3"
                style="@style/book_cover_txt"
                android:text="聊天" />
         </FrameLayout>
        
      </LinearLayout>
      
     <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="140dip"
        android:layout_centerVertical="false"

        android:orientation="horizontal" >
         
         <FrameLayout
            android:id="@+id/FrameLayout4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal" 
            android:layout_weight="1">
            
             <ImageView
                android:id="@+id/imageView_4"
                style="@style/book_cover_img" 
                android:background="@drawable/menu_find"
                android:clickable="true"
                android:focusable="true"/>
            
            <TextView
                android:id="@+id/TextView4"
                style="@style/book_cover_txt"
                android:text="发现" />
            
         </FrameLayout>
         
         <FrameLayout
            android:id="@+id/FrameLayout5"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
             <ImageView
                android:id="@+id/imageView_5"
                style="@style/book_cover_img"
                android:background="@drawable/menu_friend"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/TextView5"
                style="@style/book_cover_txt"
                android:text="我的好友" />         
         </FrameLayout>
         
         <FrameLayout
            android:id="@+id/FrameLayout6"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
          
             <ImageView
                android:id="@+id/imageView_6"
                style="@style/book_cover_img" 
                android:background="@drawable/menu_channel"
                android:clickable="true"
                android:focusable="true"/>
            
            <TextView
                android:id="@+id/TextView6"
                style="@style/book_cover_txt"
                android:text="频道" />
         </FrameLayout>
      </LinearLayout>
      
     <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="140dip"
        android:layout_centerVertical="false"

        android:orientation="horizontal" >
         
         <FrameLayout
            android:id="@+id/FrameLayout7"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal" 
            android:layout_weight="1">
            
             <ImageView
                android:id="@+id/imageView_7"
                style="@style/book_cover_img" 
                android:background="@drawable/menu_microbar"
                android:clickable="true"
                android:focusable="true"/>
            
            <TextView
                android:id="@+id/TextView7"
                style="@style/book_cover_txt"
                android:text="微吧" />
            
         </FrameLayout>
         
         <FrameLayout
            android:id="@+id/FrameLayout8"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
             <ImageView
                android:id="@+id/imageView_8"
                style="@style/book_cover_img"
                android:background="@drawable/menu_sign"
                android:clickable="true"
                android:focusable="true" />
            
            <TextView
                android:id="@+id/TextView8"
                style="@style/book_cover_txt"
                android:text="签到" />         
         </FrameLayout>
         
         <FrameLayout
            android:id="@+id/FrameLayout9"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
          
             <ImageView
                android:id="@+id/imageView_9"
                style="@style/book_cover_img" 
                android:background="@drawable/menu_application_more"
                android:clickable="true"
                android:focusable="true"/>
            
            <TextView
                android:id="@+id/TextView9"
                style="@style/book_cover_txt"
                android:text="应用推荐" />
         </FrameLayout>
      </LinearLayout>
     <TextView
       android:text="@string/xiaoxisetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
     <com.hudson.thinksns.view.SwitchButton
        android:id="@+id/wiperSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dip" />
</LinearLayout>
</LinearLayout>
