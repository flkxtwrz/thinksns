<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".Finding" >

    <ImageView
        android:id="@+id/setting_finding_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/homeblog_setting_topbar" />

    <ImageView
        android:id="@+id/setting_inform_back"
        android:layout_width="42dip"
        android:layout_height="35dip"
        android:layout_margin="5dip"
        android:background="@drawable/setting_back_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dip"
        android:text="发现"
        android:textSize="20sp" />

    <Button
        android:id="@+id/finding_audio"
        android:layout_width="70dip"
        android:layout_height="35dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/btn_cancel"
        android:text="搜索"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/finding_inputbar"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/finding_audio"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/finding_audio"
        android:background="@drawable/finding_inputbar"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/finding_input_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/finding_inputbar"
        android:layout_alignLeft="@id/finding_inputbar"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="32dip"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@id/finding_audio"
        android:background="#00000000"
        android:hint="@string/menu_finding_hint"
        android:singleLine="true"
        android:textSize="18sp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_finding_topbar"
        android:layout_margin="8dip"
        android:background="#ffffff" >

        <View
            android:id="@+id/find_v1"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="3dip"
            android:background="#e6e6e6" />

        <ImageView
            android:id="@+id/find_hottopic_pic"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_below="@id/find_v1"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="8dip"
            android:background="@drawable/finding_hottopic" />

        <TextView
            android:id="@+id/find_hottopic_txt"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/find_v1"
            android:layout_marginLeft="7dip"
            android:layout_toRightOf="@id/find_hottopic_pic"
            android:clickable="true"
            android:paddingTop="15dip"
            android:text="@string/menu_finding_hottopic"
            android:textSize="18sp" />

        <View
            android:id="@+id/find_v3"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/find_hottopic_txt"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="7dip"
            android:background="#e6e6e6" />

        <View
            android:id="@+id/find_v4"
            android:layout_width="1dip"
            android:layout_height="30dip"
            android:layout_below="@id/find_v3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dip"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/find_hot_topic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_v3"
            android:layout_marginLeft="7dip"
            android:layout_marginTop="12dip"
            android:clickable="true"
            android:text="#多部美剧下架#"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/find_hot_topic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/find_hot_topic2"
            android:layout_marginLeft="7dip"
            android:layout_toRightOf="@id/find_v4"
            android:clickable="true"
            android:text="#五一半价票#"
            android:textSize="18sp" />

        <View
            android:id="@+id/find_v5"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/find_v4"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:layout_marginTop="7dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/find_people"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/find_v5"
            android:layout_marginBottom="8dip"
            android:layout_marginTop="20dip"
            android:clickable="true" >

            <ImageView
                android:id="@+id/find_people_pic"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/finding_findpeople"
                android:focusable="false" />

            <TextView
                android:id="@+id/find_people_pic_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/find_people_pic"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/find_people_pic"
                android:focusable="false"
                android:text="@string/menu_finding_findpeople"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/find_people_pic_txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/find_people_pic"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/find_people_pic_txt"
                android:focusable="false"
                android:text="@string/menu_finding_findpeople_detail"
                android:textColor="#989898"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/find_v6"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/find_people"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/find_hotblog"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/find_v6"
            android:layout_marginBottom="8dip"
            android:clickable="true" >

            <ImageView
                android:id="@+id/find_hotblog_pic"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/finding_hotblog"
                android:focusable="false" />

            <TextView
                android:id="@+id/find_hotblog_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/find_hotblog_pic"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/find_hotblog_pic"
                android:focusable="false"
                android:text="@string/menu_finding_hotblog"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/find_v7"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/find_hotblog"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/find_app"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_below="@id/find_v7"
            android:layout_marginBottom="8dip"
            android:clickable="true"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/find_app_pic"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_marginBottom="4dip"
                android:layout_marginLeft="8dip"
                android:layout_marginTop="8dip"
                android:background="@drawable/finding_app"
                android:focusable="false" />

            <TextView
                android:id="@+id/find_app_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/find_app_pic"
                android:layout_marginLeft="7dip"
                android:layout_toRightOf="@id/find_app_pic"
                android:focusable="false"
                android:text="@string/menu_finding_app"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/find_v8"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@id/find_app"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="#e6e6e6" />
    </RelativeLayout>

</RelativeLayout>