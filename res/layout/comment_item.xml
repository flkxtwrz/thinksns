<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="8dip" >

            <ImageView
                android:id="@+id/comm_list_usericon"
                android:layout_width="45dip"
                android:layout_height="45dip"
                android:layout_alignParentLeft="true"
                android:src="@drawable/bg1" >
            </ImageView>

            <TextView
                android:id="@+id/comm_list_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/comm_list_usericon"
                android:layout_toRightOf="@id/comm_list_usericon"
                android:layout_marginLeft="8dip"
                android:text="用户名"
                 android:textSize="15sp"
                android:textColor="#246183" >
            </TextView>

            <TextView
                android:id="@+id/comm_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_below="@id/comm_list_username"
               android:layout_alignLeft="@id/comm_list_username"
               android:textSize="15sp"
                android:text="xx" >
            </TextView>

            <TextView
                android:id="@+id/comm_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/comm_list_content"
                android:layout_below="@id/comm_list_content"
                android:text="评论时间"
                android:textColor="#a6a6a6" >
            </TextView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>