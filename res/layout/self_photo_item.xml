<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/self_photo_image"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/application_bg_welcome" >
    </ImageView>

    
    <TextView
        android:id="@+id/photo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/self_photo_image"
        android:layout_below="@id/self_photo_image"
        android:visibility="gone"
        android:text="选项" >
    </TextView>

    <TextView
        android:id="@+id/photo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/photo_content"
        android:layout_alignLeft="@id/self_photo_image"
        android:text="选项" >
    </TextView>

</RelativeLayout>