<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6" >

    <ImageView
        android:id="@+id/setting_inform_selecteditem_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/setting_safe_topbar" />

    <Button
        android:id="@+id/setting_inform_selecteditem_btn_backup"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dip"
        android:background="@drawable/setting_safe_backup" />
    <!-- 评论设置、 新粉丝设置 均在此切换 -->

    <TextView
        android:id="@+id/setting_inform_selecteditem_topname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setting_inform_selecteditem_btn_backup"
        android:layout_alignBottom="@+id/setting_inform_selecteditem_btn_backup"
        android:layout_centerHorizontal="true"
        android:text="\@设置"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:id="@+id/setting_inform_selecteditem_blank1"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_below="@+id/setting_inform_selecteditem_topbar"
        android:background="#e6e6e6" />

    <TextView
        android:id="@+id/setting_inform_selecteditem_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_inform_selecteditem_blank1"
        android:layout_marginLeft="18dip"
        android:text="我将收到这些人的@通知"
        android:textColor="#000000"
        android:textSize="12sp" />

    <View
        android:id="@+id/setting_inform_selecteditem_blank2"
        android:layout_width="match_parent"
        android:layout_height="8dip"
        android:layout_below="@+id/setting_inform_selecteditem_direction"
        android:background="#e6e6e6" />

    <Spinner
        android:id="@+id/setting_inform_selecteditems"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@id/setting_inform_selecteditem_blank2"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/setting_item_bg" 
        android:entries="@array/selecteditems"/>

</RelativeLayout>