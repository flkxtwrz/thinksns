<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6" >
 
    <ImageView
        android:id="@+id/setting_safe_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/homeblog_setting_topbar" />

    <Button
        android:id="@+id/setting_safe_btn_backup"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="3dip"
        android:background="@drawable/setting_safe_backup" />

    <TextView
        android:id="@+id/setting_safe_topname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setting_safe_btn_backup"
        android:layout_alignBottom="@+id/setting_safe_btn_backup"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_safe_topname"
        android:textColor="#000000"
        android:textSize="20sp" />

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_safe_topbar"
        android:layout_margin="8dip"
        android:background="#ffffff"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/setting_safe_privaty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:text="@string/setting_safe_privaty"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dip"
                android:layout_marginRight="11dip"
                android:background="@drawable/setting_safe_pright" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/setting_safe_accounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:text="@string/setting_safe_accounts"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dip"
                android:layout_marginRight="11dip"
                android:background="@drawable/setting_safe_pright" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/setting_safe_privateletter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:text="@string/setting_safe_privateletter"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dip"
                android:layout_marginRight="11dip"
                android:background="@drawable/setting_safe_pright" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/setting_safe_microblog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:text="@string/setting_safe_microblog"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dip"
                android:layout_marginRight="11dip"
                android:background="@drawable/setting_safe_pright" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dip"
            android:background="#e6e6e6" />

        <RelativeLayout
            android:id="@+id/setting_safe_blacklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dip"
                android:text="@string/setting_safe_blacklist"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dip"
                android:layout_marginRight="11dip"
                android:background="@drawable/setting_safe_pright" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e6e6e6" />
    </LinearLayout>

</RelativeLayout>