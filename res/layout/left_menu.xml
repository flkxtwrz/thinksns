<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".SelfCenter" >

    <View
        android:id="@+id/v"
        android:layout_width="18dip"
        android:layout_height="match_parent"
        android:background="#ffffff" />

    <View
        android:id="@+id/v2"
        android:layout_width="18dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

    <View
        android:id="@+id/v3"
        android:layout_width="fill_parent"
        android:layout_height="18dip"
        android:layout_alignParentTop="true" />
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/v2"
        android:layout_below="@id/v3"
        android:layout_toRightOf="@id/v"
        android:background="#ffffff"
        android:orientation="vertical" >

       <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:orientation="horizontal" >



            <RelativeLayout
                android:id="@+id/selfmenu_mainpage"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/selfmenu_mainpage_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/menu_myselfhome" />

                <TextView
                    android:id="@+id/selfmenu_mainpage_pic_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selfmenu_mainpage_pic"
                    android:layout_centerHorizontal="true"
                    android:text="我的主页"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selfmenu_chat"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/selfmenu_chat_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:background="@drawable/menu_chat"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/selfmenu_chat_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selfmenu_chat_pic"
                    android:layout_centerHorizontal="true"
                    android:text="聊天"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="140dip"
            android:layout_centerVertical="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/selfmenu_find"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/selfmenu_find_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:background="@drawable/menu_find"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/selfmenu_find_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selfmenu_find_pic"
                    android:layout_centerHorizontal="true"
                    android:text="发现"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selfmenu_friend"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/selfmenu_friend_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:background="@drawable/menu_friend"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/selfmenu_friend_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selfmenu_friend_pic"
                    android:layout_centerHorizontal="true"
                    android:text="我的好友"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="140dip"
            android:layout_centerVertical="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/menu_microbar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/menu_microbar_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:background="@drawable/menu_sign"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/menu_microbar_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/menu_microbar_pic"
                    android:layout_centerHorizontal="true"
                    android:text="签到"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selfmenu_channel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:background="#ffffff" >

                <ImageView
                    android:id="@+id/selfmenu_channel_pic"
                    android:layout_width="80dip"
                    android:layout_height="50dip"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dip"
                    android:background="@drawable/menu_channel"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/selfmenu_channel_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/selfmenu_channel_pic"
                    android:layout_centerHorizontal="true"
                    android:text="频道"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/selfmenu_msg_inform"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menu_inform"
        android:text="\t\t\t\t消息通知"
        android:textColor="#ffffff" />

</RelativeLayout>