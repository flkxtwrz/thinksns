<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/private_addbtn_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="240dip"
        android:background="@drawable/deploy_bottom_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/private_msg_add_emotion"
            android:layout_width="0dip"
            android:layout_height="110dip"
            android:layout_weight="1.0"
            android:background="@drawable/private_msg_add_emotion" />

        <ImageView
            android:id="@+id/private_msg_add_photo"
            android:layout_width="0dip"
            android:layout_height="110dip"
            android:layout_weight="1.0"
            android:background="@drawable/private_msg_add_photo" />

        <ImageView
            android:id="@+id/private_msg_add_photoalbum"
            android:layout_width="0dip"
            android:layout_height="110dip"
            android:layout_weight="1.0"
            android:background="@drawable/private_msg_add_photoalbum" />

        <ImageView
            android:id="@+id/private_msg_add_location"
            android:layout_width="0dip"
            android:layout_height="110dip"
            android:layout_weight="1.0"
            android:background="@drawable/private_msg_add_location" />
    </LinearLayout>

</RelativeLayout>