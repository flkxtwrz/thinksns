<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/emotionitem_relativelayout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ImageView android:id="@+id/emotion_image"
		android:layout_centerHorizontal="true" android:layout_width="30dip"
		android:layout_height="30dip"></ImageView>
	<TextView android:layout_below="@id/emotion_image" android:id="@+id/emotion_text"
		android:layout_centerHorizontal="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="选项"></TextView>
</RelativeLayout>
