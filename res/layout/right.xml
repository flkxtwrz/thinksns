<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/setting_inform_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/homeblog_setting_topbar" />

    <ImageView
        android:id="@+id/setting_inform_back"
        android:layout_width="42dip"
        android:layout_height="35dip"
        android:layout_margin="5dip"
        android:background="@drawable/setting_back_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"       
        android:layout_marginTop="13dip"
        android:text="账号管理"
        android:textColor="#5b5b5b"
        android:textSize="20sp" />
    
      <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="38dip"
         android:layout_alignParentRight="true"
         android:background="@drawable/btn_cancel"
         android:layout_margin="5dip"
        android:text="@string/edit" />
    <ListView
        
     android:id="@+id/user_list"
     android:layout_width="match_parent"
     android:layout_height="fill_parent"
     android:scrollingCache="false"
      android:layout_below="@id/setting_inform_topbar"
     android:divider="#d7d7d7"
     android:background="#ffffff"
     android:layout_margin="5dip"
     android:dividerHeight="1dip" 
     android:fadingEdge="none" 
         />
  

</RelativeLayout>
