<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".InformSetting" >

    <ImageView
        android:id="@+id/inform_home_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/homeblog_setting_topbar" />

    <ImageView
        android:id="@+id/inform_home_back"
        android:layout_width="42dip"
        android:layout_height="35dip"
        android:layout_margin="5dip"
        android:background="@drawable/setting_back_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dip"
        android:text="消息通知"
        android:textColor="#5b5b5b"
        android:textSize="20sp" />

    <View
        android:id="@+id/inform_home_v1"
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:layout_below="@id/inform_home_topbar"
        android:background="#e6e6e6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inform_home_v1"
        android:layout_marginBottom="1dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/inform_system_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/inform_system_msg_pic"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="5dip"
                android:background="@drawable/self_home_mycard" />

            <TextView
                android:id="@+id/inform_system_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inform_system_msg_pic"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/inform_system_msg_pic"
                android:text="系统通知"
                android:textColor="#5b5b5b"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/inform_system_msg_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_system_msg_pic"
                android:layout_below="@id/inform_system_msg_txt"
                android:layout_toRightOf="@id/inform_system_msg_pic"
                android:text="您有"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_system_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_system_msg_pic"
                android:layout_below="@id/inform_system_msg_txt"
                android:layout_toRightOf="@id/inform_system_msg_notify"
                android:text="0"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_system_msg_notify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_system_msg_pic"
                android:layout_below="@id/inform_system_msg_txt"
                android:layout_toRightOf="@id/inform_system_msg_num"
                android:text="条新的系统通知"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inform_at_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/inform_at_msg_pic"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="5dip"
                android:background="@drawable/finding_findpeople" />

            <TextView
                android:id="@+id/inform_at_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inform_at_msg_pic"
                android:layout_toRightOf="@id/inform_at_msg_pic"
                android:text="\@我的"
                android:textColor="#5b5b5b"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/inform_at_msg_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_at_msg_pic"
                android:layout_below="@id/inform_at_msg_txt"
                android:layout_toRightOf="@id/inform_at_msg_pic"
                android:text="您有"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_at_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_at_msg_pic"
                android:layout_below="@id/inform_at_msg_txt"
                android:layout_toRightOf="@id/inform_at_msg_notify"
                android:text="0"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_at_msg_notify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_at_msg_pic"
                android:layout_below="@id/inform_at_msg_txt"
                android:layout_toRightOf="@id/inform_at_msg_num"
                android:text="条@我的新微博"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inform_comment_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/inform_comment_msg_pic"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="5dip"
                android:background="@drawable/finding_hotblog" />

            <TextView
                android:id="@+id/inform_comment_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inform_comment_msg_pic"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/inform_comment_msg_pic"
                android:text="评论"
                android:textColor="#5b5b5b"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/inform_comment_msg_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_comment_msg_pic"
                android:layout_below="@id/inform_comment_msg_txt"
                android:layout_toRightOf="@id/inform_comment_msg_pic"
                android:text="您有"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_comment_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_comment_msg_pic"
                android:layout_below="@id/inform_comment_msg_txt"
                android:layout_toRightOf="@id/inform_comment_msg_notify"
                android:text="0"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_comment_msg_notify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_comment_msg_pic"
                android:layout_below="@id/inform_comment_msg_txt"
                android:layout_toRightOf="@id/inform_comment_msg_num"
                android:text="条新的评论"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inform_fan_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/inform_fan_msg_pic"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="5dip"
                android:background="@drawable/self_home_mylove" />

            <TextView
                android:id="@+id/inform_fan_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inform_fan_msg_pic"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/inform_fan_msg_pic"
                android:text="粉丝"
                android:textColor="#5b5b5b"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/inform_fan_msg_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_fan_msg_pic"
                android:layout_below="@id/inform_fan_msg_txt"
                android:layout_toRightOf="@id/inform_fan_msg_pic"
                android:text="您有"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_fan_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_fan_msg_pic"
                android:layout_below="@id/inform_fan_msg_txt"
                android:layout_toRightOf="@id/inform_fan_msg_notify"
                android:text="0"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_fan_msg_notify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_fan_msg_pic"
                android:layout_below="@id/inform_fan_msg_txt"
                android:layout_toRightOf="@id/inform_fan_msg_num"
                android:text="位新粉丝"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inform_pletter_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/inform_pletter_msg_pic"
                android:layout_width="55dip"
                android:layout_height="50dip"
                android:layout_margin="5dip"
                android:background="@drawable/self_home_myphoto" />

            <TextView
                android:id="@+id/inform_pletter_msg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/inform_pletter_msg_pic"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@id/inform_pletter_msg_pic"
                android:text="私信"
                android:textColor="#5b5b5b"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/inform_pletter_msg_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_pletter_msg_pic"
                android:layout_below="@id/inform_pletter_msg_txt"
                android:layout_toRightOf="@id/inform_pletter_msg_pic"
                android:text="您有"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_pletter_msg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_pletter_msg_pic"
                android:layout_below="@id/inform_pletter_msg_txt"
                android:layout_toRightOf="@id/inform_pletter_msg_notify"
                android:text="0"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/inform_pletter_msg_notify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inform_pletter_msg_pic"
                android:layout_below="@id/inform_pletter_msg_txt"
                android:layout_toRightOf="@id/inform_pletter_msg_num"
                android:text="条新的私信"
                android:textColor="#5b5b5b"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/inform_home_v2"
            android:layout_width="match_parent"
            android:layout_height="5dip"
            android:background="#e6e6e6" />
    </LinearLayout>

</RelativeLayout>